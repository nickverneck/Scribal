{
  "name": "scribal",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "apps/web",
    "apps/server"
  ],
  "scripts": {
    "dev": "concurrently -k -n server,web -c blue,green \"npm:dev -w apps/server\" \"npm:dev -w apps/web\"",
    "build": "npm run build -w apps/server && npm run build -w apps/web",
    "start": "npm run start -w apps/server",
    "db:generate": "npm run db:generate -w apps/server",
    "db:migrate": "npm run db:migrate -w apps/server"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
